@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<SocialNetwork.Data.User> SignInManager
@inject UserManager<SocialNetwork.Data.User> UserManager
@{
    var u = UserManager.GetUserAsync(User).Result;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Input.ImgUrl" class="control-label"></label><br />
                <img src="@u.ImgUrl" class="avatar my-2" width="200" />
                <input type="file" name="fileToStorage" class="form-control" id="formFile" />
                <span asp-validation-for="Input.ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group my-2">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Input.Description"></label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Input.Location"></label>
                <input asp-for="Input.Location" class="form-control" />
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Input.TelegramId"></label>
                <input asp-for="Input.TelegramId" class="form-control" />
                <span asp-validation-for="Input.TelegramId" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary my-2">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}