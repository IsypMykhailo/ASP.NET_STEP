@section Scripts {
    <script>
        function buildBreadCrumbs(curDir) {
            let dirs = curDir.split('~');
            let breadCrumbs = document.getElementById("breadCrumbs");
            let span = document.getElementById("root");
            breadCrumbs.innerHTML = "";
            dirs.map(dir => {                
                span.dataset.dirname = dir;
                span.innerText += "/" + dir;
            })
            breadCrumbs.appendChild(span);
        }

        function onDirClick() {
            console.log("click");
            el = event.target;
            event.stopPropagation();            
            // let dir = el.textContent.toString();
            let dir = event.target.dataset.dirname;
            console.log("try get: ");
            dir = dir.trim();
            dir = dir.replaceAll('/', '~');
            dir = dir.replaceAll('\\', '~');
            buildBreadCrumbs(dir);
            console.log(dir);
            let oldEl = el.querySelector("ul");
            if (oldEl !== null) {
                oldEl.remove();
            } else {
                console.log("NoParent");
            }
            fetch("/api/GetAdminFiles/" + dir)
                .then(res => {
                    console.log(res.statusText);
                    return res.json();
